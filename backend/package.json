{
  "name": "nova-player-backend",
  "version": "2.0.0",
  "description": "Nova Player Backend API - Self-hosted VPS ready",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "db:generate": "prisma generate",
