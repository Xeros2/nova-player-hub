# ===========================================
# Nova Player Backend - Environment Variables
# ===========================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# PostgreSQL Database
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://nova_user:your_secure_password@localhost:5432/nova_player

# JWT Secrets (MUST be changed in production!)
# Generate with: openssl rand -base64 64
ADMIN_JWT_SECRET=change_me_admin_secret_64_chars_minimum_for_security
BUSINESS_JWT_SECRET=change_me_business_secret_64_chars_minimum_for_security
DEVICE_JWT_SECRET=change_me_device_secret_64_chars_minimum_for_security

# JWT Expiration
ADMIN_JWT_EXPIRES_IN=7d
BUSINESS_JWT_EXPIRES_IN=24h
DEVICE_JWT_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=https://nova-player.fr,https://admin.nova-player.fr

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# Trial Configuration
TRIAL_DURATION_DAYS=30

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx
