# ===========================================
# Nova Player Backend - Environment Variables
# ===========================================

# Server Configuration
NODE_ENV=production
PORT=3000
API_BASE_URL=https://core.nova-player.fr

# Database Configuration (MySQL or PostgreSQL)
# For MySQL:
DATABASE_URL=mysql://user:password@localhost:3306/nova_player
# For PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/nova_player

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
ADMIN_JWT_SECRET=your-admin-secret-key-change-in-production
ADMIN_JWT_EXPIRES_IN=7d
RESELLER_JWT_EXPIRES_IN=24h

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Trial Configuration
TRIAL_DURATION_DAYS=7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
